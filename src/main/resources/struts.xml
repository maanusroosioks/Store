<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false"/>
    <constant name="struts.devMode" value="true"/>
    <package name="myPackage" extends="struts-default">

        <default-action-ref name="index"/>

        <action name="index" class="Store.IndexAction">
            <result>/WEB-INF/jsp/index.jsp</result>
        </action>

        <action name="helloWorld" class="Store.HelloWorldAction">
            <result>/WEB-INF/jsp/helloWorld.jsp</result>
        </action>

        <action name="valuespage" class="Store.ProductAction" method="fetchProductEditingValues">
            <result>/WEB-INF/jsp/changeProductValues.jsp</result>
        </action>

        <action name="changevalues" class="Store.ProductAction" method="updateProductValues">
            <result>/WEB-INF/jsp/productTable.jsp</result>
        </action>

        <action name="fetchProductTable" class="Store.ProductAction" method="productTable">
            <result>/WEB-INF/jsp/productTable.jsp</result>
        </action>

        <action name="productShoppingTable" class="Store.ProductAction" method="productShoppingTable">
            <result>/WEB-INF/jsp/productShoppingTable.jsp</result>
        </action>

        <action name="shoppingCartTable" class="Store.ProductAction" method="shoppingCartTable">
            <result>/WEB-INF/jsp/shoppingCart.jsp</result>
        </action>

        <action name="addToShoppingCart" class="Store.ProductAction" method="addToShoppingCart">
            <result>/WEB-INF/jsp/productShoppingTable.jsp</result>
        </action>

        <action name="deleteFromShoppingCart" class="Store.ProductAction" method="deleteFromShoppingCart">
            <result>/WEB-INF/jsp/shoppingCart.jsp</result>
        </action>

        <action name="newproductentry" class="Store.ProductAction" method="newProductPage">
            <result>/WEB-INF/jsp/insertNewProduct.jsp</result>
        </action>

        <action name="insertnewproduct" class="Store.ProductAction" method="insertNewProduct">
            <result>/WEB-INF/jsp/productTable.jsp</result>
        </action>

        <action name="deleteproductentry" class="Store.ProductAction" method="deleteProduct">
            <result>/WEB-INF/jsp/productTable.jsp</result>
        </action>

        <action name="clientRegistrationPage" class="Store.ClientAction" method="clientRegistrationPage">
            <result>/WEB-INF/jsp/registerNewClient.jsp</result>
        </action>

        <action name="registerNewClient" class="Store.ClientAction" method="registerNewClient">
            <result>/WEB-INF/jsp/productTable.jsp</result>
        </action>

        <action name="loginPage" class="Store.ClientAction" method="clientLoginPage">
            <result >/WEB-INF/jsp/loginPage.jsp</result>
        </action>

        <action name="clientLogIn" class="Store.ClientAction" method="clientLogIn">
            <result name="success"  >/WEB-INF/jsp/loginSuccessful.jsp</result>
            <result name="error" >/WEB-INF/jsp/loginError.jsp</result>
        </action>

        <action name="logout" class="Store.ClientAction" method="logout">
            <result name="success" >/WEB-INF/jsp/logoutSuccess.jsp</result>
        </action>

        <action name="profile" class="Store.Profile">
            <result name="success" >/WEB-INF/jsp/profileSuccess.jsp</result>
            <result name="error" >/WEB-INF/jsp/profileError.jsp</result>
        </action>
    </package>

</struts>
