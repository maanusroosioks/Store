<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false"/>
    <constant name="struts.devMode" value="true"/>
    <package name="myPackage" extends="struts-default">

        <default-action-ref name="index"/>

        <action name="index" class="Store.IndexAction">
            <result>/WEB-INF/jsp/index.jsp</result>
        </action>

        <action name="valuesPage" class="Store.Action.ProductAction" method="fetchProductEditingValues">
            <result>/WEB-INF/jsp/changeProductValues.jsp</result>
        </action>

        <action name="changeValues" class="Store.Action.ProductAction" method="updateProductValues">
            <result>/WEB-INF/jsp/productTable.jsp</result>
        </action>

        <action name="fetchProductTable" class="Store.Action.ProductAction" method="productTable">
            <result>/WEB-INF/jsp/productTable.jsp</result>
        </action>

        <action name="productShoppingTable" class="Store.Action.ProductAction" method="productShoppingTable">
            <result>/WEB-INF/jsp/productShoppingTable.jsp</result>
        </action>

        <action name="newProductEntry" class="Store.Action.ProductAction" method="newProductPage">
            <result>/WEB-INF/jsp/insertNewProduct.jsp</result>
        </action>

        <action name="displayNewProductSpecifications" class="Store.Action.ProductAction" method="displayNewProductSpecifications">
            <result>/WEB-INF/jsp/newProductTypeSelected.jsp</result>
        </action>

        <action name="insertNewProduct" class="Store.Action.ProductAction" method="insertNewProduct">
            <result>/WEB-INF/jsp/productTable.jsp</result>
        </action>

        <action name="productTypeCreationPage" class="Store.Action.ProductAction" method="productTypeCreationPage">
            <result>/WEB-INF/jsp/createNewProductTable.jsp</result>
        </action>

        <action name="createNewProductTable" class="Store.Action.ProductAction" method="createNewProductTable">
            <result>/WEB-INF/jsp/index.jsp</result>
        </action>

        <action name="deleteProductEntry" class="Store.Action.ProductAction" method="deleteProduct">
            <result>/WEB-INF/jsp/productTable.jsp</result>
        </action>

        <action name="shoppingCartTable" class="Store.Action.ShoppingCartAction" method="shoppingCartTable">
            <result>/WEB-INF/jsp/shoppingCart.jsp</result>
        </action>

        <action name="addToShoppingCart" class="Store.Action.ShoppingCartAction" method="addToShoppingCart">
            <result>/WEB-INF/jsp/productShoppingTable.jsp</result>
        </action>

        <action name="deleteFromShoppingCart" class="Store.Action.ShoppingCartAction" method="deleteFromShoppingCart">
            <result>/WEB-INF/jsp/shoppingCart.jsp</result>
        </action>

        <action name="emptyShoppingCart" class="Store.Action.ShoppingCartAction" method="emptyShoppingCart">
            <result>/WEB-INF/jsp/shoppingCart.jsp</result>
        </action>

        <action name="productOverview" class="Store.Action.ClientAction" method="productSpecificationsPage">
            <result >/WEB-INF/jsp/productDescription.jsp</result>
        </action>

        <action name="clientRegistrationPage" class="Store.Action.ClientAction" method="clientRegistrationPage">
            <result>/WEB-INF/jsp/registerNewClient.jsp</result>
        </action>

        <action name="registerNewClient" class="Store.Action.ClientAction" method="registerNewClient">
            <result>/WEB-INF/jsp/productTable.jsp</result>
        </action>

        <action name="loginPage" class="Store.Action.ClientAction" method="clientLoginPage">
            <result >/WEB-INF/jsp/loginPage.jsp</result>
        </action>

        <action name="clientLogIn" class="Store.Action.ClientAction" method="clientLogIn">
            <result name="success"  >/WEB-INF/jsp/loginSuccessful.jsp</result>
            <result name="error" >/WEB-INF/jsp/loginError.jsp</result>
        </action>

        <action name="logOut" class="Store.Action.ClientAction" method="logout">
            <result name="success" >/WEB-INF/jsp/logoutSuccess.jsp</result>
        </action>

        <action name="updateClientInfo" class="Store.Action.ClientAction" method="updateClientInfo">
            <result name="success" >/WEB-INF/jsp/index.jsp</result>
        </action>

        <action name="generateOrder" class="Store.Action.OrderAction" method="generateOrder">
            <result>/WEB-INF/jsp/shoppingCart.jsp</result>
        </action>

        <action name="ordersPage" class="Store.Action.OrderAction" method="ordersPage">
            <result>/WEB-INF/jsp/ordersPage.jsp</result>
        </action>

        <action name="profilePage" class="Store.Action.ClientAction" method="profilePage">
            <result name="success" >/WEB-INF/jsp/profileSuccess.jsp</result>
            <result name="error" >/WEB-INF/jsp/profileError.jsp</result>
        </action>
    </package>

</struts>
